#!/usr/bin/env bash
# Direnv configuration for NixOS Unified
# This file enables automatic shell activation when entering the directory

# Use the flake-based development shell
use flake

# Watch additional files for changes
watch_file shell.nix
watch_file flake.nix
watch_file flake.lock

# Set environment variables
export NIX_CONFIG="experimental-features = nix-command flakes"
export NIXOS_UNIFIED_DEV=1

# Create logs directory if it doesn't exist
mkdir -p logs

# Show helpful information
echo "üèóÔ∏è  NixOS Unified development environment activated"
echo "üí° Run 'just' to see available commands"
